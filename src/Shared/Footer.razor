@namespace MikeCodesDotNET.Components

<footer class="bg-primary-4 text-light" id="footer">
    <div class="container">
        
        <AuthorizeView>
            <NotAuthorized>
                <div class="row">
                    <div class="col">
                        <div class="card card-body border-0 o-hidden mb-0 bg-primary text-light">
                            <div class="position-relative d-flex flex-column flex-md-row justify-content-between align-items-center">
                                <div class="h3 text-center mb-md-0">Let's connect</div>
                                <a href="https://www.twitter.com/MikeCodesDotNET" class="btn btn-lg btn-white">
                                    Find me on Twitter
                                </a>
                            </div>                           
                        </div>

                    </div>
                </div>
            </NotAuthorized>
            <Authorized>
                <!-- NO OP -->
            </Authorized>
        </AuthorizeView>
        <div class="container mt-3 pt-4">
            <div class="row pb-5">

                <div class="col-md-6 col-lg-3">
                    <div class="row">
                        <a class="navbar-brand" asp-area="" asp-page="/Index">Mike Codes .NET</a>
                    </div>
                    <div class="row text-muted">
                        <p>Views are my own, as are the ViewModels.</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <h5>Projects</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a href="https://github.com/Aldwych-Controls" class="nav-link">Aldwych DMX</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://github.com/MikeCodesDotNET/Cloud-News" class="nav-link">Cloud News for iOS</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://github.com/MikeCodesDotNET/Cognitive-Services-Image-Downloader" class="nav-link">Image Search for macOS</a>
                        </li>
                    </ul>
                </div>

                <div class="col-md-6 col-lg-3">
                    <h5>Navigation</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" href="/" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" href="/about" asp-page="/About">About Me</a>
                        </li>                     
                    </ul>
                </div>

                <div class="col-md-6 col-lg-3">
                    <h5>Links</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a href="https://github.com/mikecodesdotnet" class="nav-link">GitHub</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://twitter.com/mikecodesdotnet" class="nav-link">Twitter</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://www.youtube.com/channel/UCjuFkfC32NPueOL6IoYN8kA" class="nav-link">YouTube</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://www.linkedin.com/in/micjames/" class="nav-link">LinkedIn</a>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </div>



    <div class="row justify-content-center">
        <div class="col col-md-auto text-center">
            <small class="text-muted">
                @Copyright
            </small>           
        </div>
    </div>

    <div class="row justify-content-center pb-4">
        <div class="col col-md-auto text-center">
            <small class="text-muted">
                 <a class="nav-link" asp-area="" href="/tou" asp-page="/tou">Terms of Use</a>
            </small>           
        </div>
    </div>
</footer>


@code {

